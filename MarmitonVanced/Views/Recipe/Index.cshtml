@using Models
@model List<Recipe>

<body class="text-center">
    <div class="main">
        <h1 class="display-4">Liste des recettes</h1>
        <div class="selectType">
            <button class="frame2" onclick="showTypeRecipe('Tout')">Toute</button>
            <button class="frame2" onclick="showTypeRecipe('Entree')">Entrée</button>
            <button class="frame2" onclick="showTypeRecipe('plat')">Plat</button>
            <button class="frame2" onclick="showTypeRecipe('dessert')">Dessert</button>
        </div>
        <div class="list" id="Tout">
            @foreach (Recipe recipe in Model)
            {
                <button class="recipe frame2" onclick="location.href ='/recipe/details?id=@recipe.Id'">
                    @* <img src="@recipe.Image" alt="Recette" /> *@
                    <div>
                        <div>
                            <p>@recipe.Name</p>
                            <p>Nombre de personne : @recipe.CountRecipe</p>
                        </div>
                        <div>
                            <p>Temps : @recipe.Time</p>
                            @if (recipe.Cost == "")
                            {
                                <p></p>
                            }
                            else
                            {
                                <p class="price">Coût de la recette : @recipe.Cost</p>
                            }
                        </div>
                    </div>
                </button>
            }
        </div>
        <div class="list" id="Entree" style="visibility:hidden">
            @foreach (Recipe recipe in Model.Where(recipe => recipe.Type == RecipeType.Entrée))
            {
