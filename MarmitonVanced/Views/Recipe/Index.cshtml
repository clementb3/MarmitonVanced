                                <p></p>
                            }
                            else
                            {
                                <p class="price">Coût de la recette : @recipe.Cost</p>
                            }
                        </div>
                    </div>
                </button>
            }
        </div>
        <div class="list" id="plat" style="visibility:hidden">
            @foreach (Recipe recipe in Model.Where(recipe => recipe.Type == RecipeType.Plat))
            {
                <button class="recipe frame2" onclick="location.href ='/recipe/details?id=@recipe.Id'">
